{
  "private": true,
  "scripts": {
    "generate-types": "rm -r types/truffle-contracts && typechain --target=truffle-v5 build/contracts/**/*.json",
    "postinstall": "truffle compile && yarn generate-types",
    "migrate": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^5.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/web3": "^1.2.2",
    "truffle": "^5.3.9",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  }
}
